@model RegisterDTO

@{
    ViewBag.Title = "Register";
    ViewBag.Register = "active";
}

<div class="text-secondary mb-3">
    <span>Contacts</span>
    <i class="fa-solid fa-caret-right"></i>
    <span>Register</span>
</div>

<div class="container d-flex justify-content-center mt-2">
    <div class="card p-5 shadow-lg rounded-3" style="max-width: 700px; width: 100%;">
        <p class="text-center fs-6">
            Already Registered?
            <a asp-action="Login" asp-controller="Account" class="text-primary text-decoration-none">Login</a>
        </p>
        <h2 class="h4 text-center mb-4">Register</h2>

        <form asp-controller="Account" asp-action="Register" method="post" class="needs-validation">
            <!-- Name -->
            <div class="mb-3">
                <label asp-for="PersonName" class="form-label fw-bold">Name</label>
                <input asp-for="PersonName" class="form-control rounded-2" type="text" placeholder="Enter your name" required />
                <span asp-validation-for="PersonName" class="text-danger small"></span>
            </div>

            <!-- Email -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold">Email</label>
                <input asp-for="Email" class="form-control rounded-2" type="email" placeholder="Enter your email" required />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-bold">Password</label>
                <input asp-for="Password" class="form-control rounded-2" type="password" placeholder="Enter your password" required />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <!-- Confirm Password -->
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label fw-bold">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control rounded-2" type="password" placeholder="Re-enter your password" required />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <!-- Phone -->
            <div class="mb-3">
                <label asp-for="Phone" class="form-label fw-bold">Phone</label>
                <input asp-for="Phone" class="form-control rounded-2" type="tel" placeholder="Enter your phone number" />
                <span asp-validation-for="Phone" class="text-danger small"></span>
            </div>

            <!-- User Type (Inline Radio Buttons) -->
            <div class="mb-3">
                <label class="form-label fw-bold d-block">User Type</label>
                <div class="d-flex gap-3">
                    <div class="form-check">
                        <input type="radio" asp-for="UserType" id="User" class="form-check-input" value="User" checked />
                        <label class="form-check-label" for="User">User</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" asp-for="UserType" id="Admin" class="form-check-input" value="Admin" />
                        <label class="form-check-label" for="Admin">Admin</label>
                    </div>
                </div>
                <span asp-validation-for="UserType" class="text-danger small"></span>
            </div>

            <!-- Register Button -->
            <div class="d-grid">
                <button type="submit" class="btn btn-success rounded-pill py-2">Create</button>
            </div>

            <div asp-validation-summary="All" class="text-danger mt-2"></div>

            @if (ViewBag.Errors != null)
            {
                <div class="text-danger mt-2">
                    <ul class="list-unstyled">
                        @foreach (string error in ViewBag.Errors)
                        {
                            <li>@error</li>
                        }
                    </ul>
                </div>
            }
        </form>
    </div>
</div>

@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" asp-fallback-test="window.jQuery" asp-fallback-src="~/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.4/jquery.validate.min.js" asp-fallback-test="window.jQuery.validator" asp-fallback-src="~/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" asp-fallback-test="window.jQuery.validator.unobtrusive" asp-fallback-src="~/jquery.validate.unobtrusive.min.js"></script>
}
