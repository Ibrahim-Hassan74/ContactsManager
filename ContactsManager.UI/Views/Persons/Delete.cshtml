@model PersonResponse
@{
	ViewBag.Title = "Delete Person";
	ViewBag.NamePage = "Delete Person";
}

<div class="container d-flex justify-content-center mt-3">
	<div class="card shadow p-4" style="max-width: 600px; width: 100%;">
		<div class="card-body">
			<a asp-controller="Persons" asp-action="Index" class="btn btn-outline-secondary mb-3">
				<i class="bi bi-arrow-left"></i> Back to Persons List
			</a>
			<h3 class="text-danger text-center">Are you sure you want to delete this person?</h3>
			<form asp-controller="Persons" asp-action="Delete" method="post">
				<input type="hidden" asp-for="PersonID" />

				<!-- Person Name -->
				<div class="mb-3">
					<label asp-for="PersonName" class="form-label fw-bold">Person Name</label>
					<input asp-for="PersonName" class="form-control" disabled />
				</div>

				<!-- Email -->
				<div class="mb-3">
					<label asp-for="Email" class="form-label fw-bold">Email</label>
					<input asp-for="Email" class="form-control" disabled />
				</div>

				<!-- Delete Button -->
				<div class="d-grid">
					<button type="submit" class="btn btn-danger rounded-pill py-2">
						<i class="bi bi-trash"></i> Delete
					</button>
				</div>

				<!-- Validation Summary -->
				<div asp-validation-summary="All" class="text-danger mt-3"></div>
			</form>
		</div>
	</div>
</div>
