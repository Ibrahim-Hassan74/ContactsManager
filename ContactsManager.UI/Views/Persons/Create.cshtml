@model PersonAddRequest
@{
    ViewBag.Title = "Create Person";
    ViewBag.NamePage = "Create Person";
}

<div class="text-secondary mb-3">
    <span>Persons</span>
    <i class="fa-solid fa-caret-right"></i>
    <span>Create</span>
</div>

<div class="container d-flex justify-content-center mt-2">
    <div class="card p-5 shadow-lg rounded-3" style="max-width: 700px; width: 100%;">
        <a asp-controller="Persons" asp-action="Index" class="btn btn-outline-secondary mb-3">
            <i class="fa-solid fa-arrow-left"></i> Back to Persons List
        </a>

        <h2 class="h4 text-center mb-4">Create Person</h2>

        <form asp-controller="Persons" asp-action="Create" method="post" class="needs-validation">
            <!-- Person Name -->
            <div class="mb-3">
                <label asp-for="PersonName" class="form-label fw-bold">Person Name</label>
                <input asp-for="PersonName" class="form-control rounded-2" placeholder="Enter full name" />
                <span asp-validation-for="PersonName" class="text-danger small"></span>
            </div>

            <!-- Email -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold">Email</label>
                <input asp-for="Email" class="form-control rounded-2" placeholder="Enter email address" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <!-- Date Of Birth -->
            <div class="mb-3">
                <label asp-for="DateOfBirth" class="form-label fw-bold">Date of Birth</label>
                <input asp-for="DateOfBirth" class="form-control rounded-2" type="date" />
                <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
            </div>

            <!-- Gender (Inline Radio Buttons) -->
            <div class="mb-3">
                <label class="form-label fw-bold">Gender</label>
                <div class="d-flex gap-3">
                    @{
                        string[] genders = (string[])Enum.GetNames(typeof(GenderOptions));
                    }
                    @foreach (string gender in genders)
                    {
                        <div class="form-check">
                            <input type="radio" asp-for="Gender" value="@gender" id="@gender" class="form-check-input" />
                            <label for="@gender" class="form-check-label">@gender</label>
                        </div>
                    }
                </div>
                <span asp-validation-for="Gender" class="text-danger small"></span>
            </div>

            <!-- Country -->
            <div class="mb-3">
                <label asp-for="CountryID" class="form-label fw-bold">Country</label>
                <select asp-for="CountryID" class="form-select rounded-2" asp-items="ViewBag.Countries">
                    <option value="">Please Select</option>
                </select>
                <span asp-validation-for="CountryID" class="text-danger small"></span>
            </div>

            <!-- Address -->
            <div class="mb-3">
                <label asp-for="Address" class="form-label fw-bold">Address</label>
                <textarea asp-for="Address" class="form-control rounded-2" rows="3" placeholder="Enter address"></textarea>
                <span asp-validation-for="Address" class="text-danger small"></span>
            </div>

            <!-- Receive Newsletters -->
            <div class="mb-3 form-check">
                <input asp-for="ReciveNewsLetters" class="form-check-input" value="true" />
                <label asp-for="ReciveNewsLetters" class="form-check-label">Receive Newsletters</label>
                <span asp-validation-for="ReciveNewsLetters" class="text-danger small"></span>
            </div>

            <!-- Submit Button -->
            <div class="d-grid">
                <button type="submit" class="btn btn-success rounded-pill py-2">Create</button>
            </div>

            <div asp-validation-summary="All" class="text-danger mt-2"></div>

            @if (ViewBag.Errors != null)
            {
                <div class="text-danger mt-2">
                    <ul class="list-unstyled">
                        @foreach (string error in ViewBag.Errors)
                        {
                            <li>@error</li>
                        }
                    </ul>
                </div>
            }
        </form>
    </div>
</div>

@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" asp-fallback-test="window.jQuery" asp-fallback-src="~/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.4/jquery.validate.min.js" asp-fallback-test="window.jQuery.validator" asp-fallback-src="~/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" asp-fallback-test="window.jQuery.validator.unobtrusive" asp-fallback-src="~/jquery.validate.unobtrusive.min.js"></script>
}
